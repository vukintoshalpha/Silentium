<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Silentium.ContactEdit">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="cId" HorizontalOptions="Center" />
            <Entry x:Name="Ime"
               VerticalOptions="Center"
               Placeholder="Ime"
               Text="{Binding Ime}"/>
            <Entry x:Name="Number"
                    Placeholder="Broj"
                    VerticalOptions="Center"
                    Text="{Binding Number}"/>
            <Button Text="Sačuvaj" Clicked="Button_Clicked"/>
            <Button Text="Obriši" Clicked="Button_Clicked_1" x:Name="cDelete"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>